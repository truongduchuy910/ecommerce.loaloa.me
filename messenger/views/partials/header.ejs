<header>
  <section class="container">
    <div class="input-group input-group-sm my-3">
      <input
        id="input-search"
        type="text"
        class="form-control"
        placeholder="Tìm sản phẩm..."
        aria-label="Tìm sản phẩm..."
        aria-describedby="button-addon2"
      />
      <div class="input-group-append">
        <button
          onclick="inputSearch.value = '';"
          class="btn btn-outline-secondary"
          type="button"
          id="button-addon2"
        >
          ✖
        </button>
      </div>
    </div>

    <span
      id="label-search"
      class="badge badge-secondary my-3 "
      style="display:none"
      >Kết quả tìm kiếm</span
    >
    <div id="products-search" class="row">
      <a href="duong-dan" class="col-4 col-sm-4 ">
        <img class="img-fuild w-100" src="duong-dan-hinh-anh" />
        <p class="text-dark mt-3 mb-0 p-0">san-pham</p>
        <p class="text-primary">gia</p>
      </a>
    </div>
    <script>
      let search = new Products({ id: "products-search" });
      search.limit = 6;
      let inputSearch = document.getElementById("input-search");

      let labelSearch = document.getElementById("label-search");
      if (inputSearch) {
        inputSearch.onkeyup = async function() {
          const key = this.value;
          search.html.empty();
          if (key.length > 1) {
            await search.load({
              condition: `name_contains_i: "${key}"`
            });
            labelSearch.style.display = "inline-block";
          } else {
            labelSearch.style.display = "none";
          }
        };
      }
    </script>
  </section>
</header>
